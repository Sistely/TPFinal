@{
    ViewData["Title"] = "Home Page";
    @model IEnumerable<Produto>
}

<div class="text-center">
    <table class="table table-sm table-dark table-bordered m-2">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Preço</th>
                <th>Status</th>
                <th>Nome Usuário Cadastrante</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
            <tr>
                <td>@r.Id</td>
                <td>@r.Nome</td>
                <td>@r.Preco</td>
                <td>@r.Status</td>
                <td>@r.UsuarioCadastro.Nome</td>            
                <td>
                    <a asp-action="UpdateProdutoById" asp-route-id="@r.Id">Update</a>
                </td>
                <td>
                    <a asp-action="DeleteProduto" asp-route-id="@r.Id">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<a style="float:right" asp-action="AdicionarProduto" class="btn btn-sm btn btn-success" id="btn">Adicionar Produto</a>